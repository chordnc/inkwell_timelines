        $.ajax({
            url: '/inkwell_timelines',
            type: 'POST',
            dataType: 'html',
            data: JSON.stringify({ block_name: inkwell_timelines.timelineBlockName(), timeline: inkwell_timelines.activeTimelineName() ,last_post_id: last_post_id }),
            success: function (data) {
                console.log(data);
            }
        });
    }
};



